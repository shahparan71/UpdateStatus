<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="7dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/recyclerViewPersonDetails"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/tutorProfilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:src="@drawable/company_logo"
            app:civ_border_color="@color/yoda_gray"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tutorProfilePic"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tutorProfilePic"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleTutorName"
                    android:layout_width="match_parent"
                    android:layout_marginRight="13dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSizeAllFiled15"
                    android:singleLine="true"
                    android:textColor="@color/Yoda_dark_blue"
                    android:text="Opus Technology Limited" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/status_update"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/fontSizeAllFiledSmall"
                    android:layout_height="wrap_content"
                    style="@style/fontStyleNormal"
                    android:singleLine="true"
                    android:text="adfasdfads" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/myImage"
                    android:layout_height="100dp">

                </ImageView>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>